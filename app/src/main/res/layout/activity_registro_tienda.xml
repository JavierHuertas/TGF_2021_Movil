<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro.RegistrarseUsuarios"
    android:background="@color/Carne"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/elige_imagen"
                android:textColor="@color/secondaryColor"
                android:textSize="25dp"
                android:textStyle="italic" />

            <RelativeLayout
                android:layout_width="334dp"
                android:layout_height="191dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/fondo_registros_inputs">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenLogoTienda"
                    android:layout_width="200dp"
                    android:layout_height="159dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="74dp"
                    android:onClick="cambiarImagen"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp"
                    app:srcCompat="@drawable/default_users" />
            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"></Space>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/text_subrayado"
                android:textColor="@color/secondaryColor"
                android:textSize="25dp"
                android:textStyle="italic" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editTextNombreDuenio"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:hint="Nombre dueño"
                android:textColorHint="@color/quantum_grey700"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxBackgroundMode="outline"
                app:boxStrokeErrorColor="@android:color/holo_red_dark"
                app:errorEnabled="true"
                app:errorIconDrawable="@android:drawable/stat_notify_error"
                app:errorIconTint="@android:color/holo_red_dark"
                app:placeholderTextColor="@color/black"
                app:startIconDrawable="@drawable/ic_user_loginregister"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@android:color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editTextNombreNegocio"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:hint="Nombre negocio"
                android:textColorHint="@color/quantum_grey700"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxBackgroundMode="outline"
                app:boxStrokeErrorColor="@android:color/holo_red_dark"
                app:errorEnabled="true"
                app:errorIconDrawable="@android:drawable/stat_notify_error"
                app:errorIconTint="@android:color/holo_red_dark"
                app:placeholderTextColor="@color/black"
                app:startIconDrawable="@drawable/ic_tienda_loginregister"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@android:color/white" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/direccion"
                android:textColor="@color/secondaryColor"
                android:textSize="25dp"
                android:textStyle="italic" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editTextDireccionTienda"
                android:layout_width="300dp"
                android:layout_height="80dp"

                android:background="@android:color/transparent"
                android:hint="Direccion"
                android:textColorHint="@color/quantum_grey700"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxBackgroundMode="outline"
                app:boxStrokeErrorColor="@android:color/holo_red_dark"
                app:errorEnabled="true"
                app:errorIconDrawable="@android:drawable/stat_notify_error"
                app:errorIconTint="@android:color/holo_red_dark"
                app:placeholderTextColor="@color/black"
                app:startIconDrawable="@android:drawable/ic_dialog_map"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@android:color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:id="@+id/intetnDirecion"
                android:layout_width="177dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/boton_login_empresa"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ralewayregular"
                    android:gravity="center"
                    android:text="Selecionar Dinerccion"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <Space
                android:layout_width="wrap_content"
                android:layout_height="25dp"></Space>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/emailypass"
                android:textColor="@color/secondaryColor"
                android:textSize="25dp"
                android:textStyle="italic" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editTextTextEmailAddressTienda"
                android:layout_width="300dp"
                android:layout_height="80dp"

                android:background="@android:color/transparent"
                android:hint="Correo Electronico"
                android:textColorHint="@color/quantum_grey700"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxBackgroundMode="outline"
                app:boxStrokeErrorColor="@android:color/holo_red_dark"
                app:errorEnabled="true"
                app:errorIconDrawable="@android:drawable/stat_notify_error"
                app:errorIconTint="@android:color/holo_red_dark"
                app:placeholderTextColor="@color/black"
                app:startIconDrawable="@android:drawable/ic_dialog_email"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@android:color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editTextTextPasswordTienda"
                android:layout_width="300dp"
                android:layout_height="80dp"

                android:background="@android:color/transparent"
                android:hint="Contraseña"
                android:textColorHint="@color/quantum_grey700"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxBackgroundMode="outline"
                app:boxStrokeErrorColor="@android:color/holo_red_dark"
                app:errorEnabled="true"
                app:errorIconDrawable="@android:drawable/stat_notify_error"
                app:errorIconTint="@android:color/holo_red_dark"
                app:placeholderTextColor="@color/black"
                app:startIconDrawable="@android:drawable/ic_lock_lock"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@android:color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editTextTextPassword2Tienda"
                android:layout_width="300dp"
                android:layout_height="80dp"

                android:background="@android:color/transparent"
                android:hint="Repetir Contraseña"
                android:textColorHint="@color/quantum_grey700"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxBackgroundMode="outline"
                app:boxStrokeErrorColor="@android:color/holo_red_dark"
                app:errorEnabled="true"
                app:errorIconDrawable="@android:drawable/stat_notify_error"
                app:errorIconTint="@android:color/holo_red_dark"
                app:placeholderTextColor="@color/black"
                app:startIconDrawable="@android:drawable/ic_lock_lock"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@android:color/white" />

            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="25dp"></Space>

            <RelativeLayout
                android:id="@+id/buttonRegistrarseTienda"
                android:layout_width="168dp"
                android:layout_height="59dp"
                android:background="@drawable/boton_login_empresa"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/ralewayregular"
                    android:gravity="center"
                    android:text="Registrarse"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="25dp"></Space>

        </LinearLayout>
    </ScrollView>
</LinearLayout>